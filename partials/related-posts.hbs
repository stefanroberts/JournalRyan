{{#get "posts" limit="5" filter="tags:[{{post.tags}}]+id:-{{post.id}}" as |next|}}
{{#if next}}
    <section class="related-wrapper gh-canvas">
        <h3 class="related-title">Read next</h3>
        <div class="related-feed">
            {{#foreach posts}}
                {{> "article-loop"}}
            {{/foreach}}
        </div>
    </section>
{{/if}}
{{/get}}
